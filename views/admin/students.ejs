<%- include('../partials/header') %>

<div class="container">
  <div class="admin-header">
    <h1>All Students</h1>
    <nav class="admin-nav">
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/admin/pending">Pending Requests</a>
      <a href="/admin/students" class="active">All Students</a>
      <a href="/admin/banned-words">Banned Words</a>
    </nav>
  </div>

  <% if (students.length > 0) { %>
    <div class="table-responsive">
      <table class="admin-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Student ID</th>
            <th>Status</th>
            <th>Visibility</th>
            <th>Flagged</th>
            <th>Joined</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(student => { %>
            <tr>
              <td><%= student.name %></td>
              <td><%= student.email %></td>
              <td><%= student.studentId %></td>
              <td><span class="badge badge-<%= student.status %>"><%= student.status %></span></td>
              <td><span class="badge badge-<%= student.visibility %>"><%= student.visibility %></span></td>
              <td>
                <% if (student.flaggedContentAttempts > 0) { %>
                  <span class="badge badge-danger"><%= student.flaggedContentAttempts %></span>
                <% } else { %>
                  <span class="badge badge-success">0</span>
                <% } %>
              </td>
              <td><%= new Date(student.createdAt).toLocaleDateString() %></td>
              <td>
                <a href="/profile/<%= student.username %>" class="btn btn-sm" target="_blank">View</a>
                <form action="/admin/student/delete/<%= student._id %>" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="empty-state">
      <p>No students registered yet.</p>
      <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>